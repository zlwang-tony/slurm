print_header $test_id

set gpu_cnt [get_gpu_count 1]
if {$gpu_cnt < 0} {
	log_error "Error getting GPU count"
	exit 1
}
if {$gpu_cnt < 2} {
	log_warn "This test requires 2 or more GPUs per node in the default partition"
	exit 0
}

proc submit_job {cmd expected_error} {
	global number

	set err_match 0
	set job_id 0

	set cmd_pid [spawn {*}$cmd]
	expect {
		-re "job ($number)" {
			set job_id $expect_out(1,string)
		}
		-re $expected_error {
			incr err_match
			exp_continue
		}
		timeout {
			log_error "command not responding"
			slow_kill $cmd_pid
			end_it 1
		}
		eof {
			wait
		}
	}
	if {$expected_error ne "noerror"} {
		if {$err_match != 1} {
			log_error "didn't get expected error ($expected_error)"
			end_it 1
		}
	} elseif {!$job_id} {
		log_error "didn't get a job_id"
		end_it 1
	}

	return $job_id
}

proc scontrol {job_id grep re} {
	global bin_bash bin_grep scontrol

	set matches 0

	spawn $bin_bash -c "exec $scontrol show job $job_id | $bin_grep -i '$grep'"
	expect {
		-re $re {
			incr matches
			exp_continue
		}
		timeout {
			log_error "scontrol not responding"
			end_it 1
		}
		eof {
			wait
		}
	}
	if {$matches != 1 } {
		log_error "Didn't match $re ($matches != 1)"
		end_it 1
	}
}

proc cleanup { } {
	global bin_rm test_id

	return 0
}

proc end_it { exit_code } {
	global test_id
	if {$exit_code == 0} {
		cleanup
		print_success $test_id
	}
	exit $exit_code
}

proc test_gpu_bind {} {
	global sbatch srun salloc

	set tests [list \
		"--gpu-bind=blah : --gpu-bind=closest" \
		"--gpu-bind=closest : --gpu-bind=blah" \
	]

	set submission_errors {
		"error: Invalid --tres-bind argument: gpu:blah"
		"error: Invalid --tres-bind argument: gpu:blah"
	}

	foreach cmd {sbatch srun salloc} {
		foreach a $tests b $submission_errors {
			set run ""
			if {$cmd eq "sbatch"} {
				set run "$sbatch -o/dev/null $a --wrap=hostname"
			} elseif {$cmd eq "srun"} {
				set run "$srun $a hostname"
			} else {
				set run "$salloc $a hostname"
			}

			submit_job $run $b
		}
	}

	set tests [list \
		"--gpu-bind=closest : --gpu-bind=closest" \
		"--gpu-bind=closest : --gpu-bind=map_gpu:1" \
		"--gpu-bind=map_gpu:1 : --gpu-bind=closest" \
		"--gpu-bind=closest : -n1" \
		"-n1 : --gpu-bind=closest" \
	]

	set regexes [list \
		"^JobId=.*TresBind=gpu:closest.*JobId=.*TresBind=gpu:closest" \
		"^JobId=.*TresBind=gpu:closest.*JobId=.*TresBind=gpu:map_gpu:1" \
		"^JobId=.*TresBind=gpu:map_gpu:1.*JobId=.*TresBind=gpu:closest" \
		"^JobId=.*TresBind=gpu:closest.*JobId=" \
		"^JobId=.*JobId=.*TresBind=gpu:closest" \
	]

	foreach cmd {sbatch srun salloc} {
		foreach a $tests re $regexes {
			set run ""
			if {$cmd eq "sbatch"} {
				set run "$sbatch -o/dev/null $a --wrap=hostname"
			} elseif {$cmd eq "srun"} {
				set run "$srun $a hostname"
			} else {
				set run "$salloc $a hostname"
			}

			set job_id [submit_job $run "noerror"]
			scontrol $job_id "^JobId\\|TresBind" $re
			cancel_job $job_id
		}
	}
}

